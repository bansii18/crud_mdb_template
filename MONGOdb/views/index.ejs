<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table {
            width: 70%;
            margin: auto;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px 15px;
            border: 1px solid #aaa;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        
    </style>
</head>
<body>

    <h1 style="text-align:center;">All Users</h1>
    <div style="text-align:center; margin-bottom: 20px;">
        <button><a href="/new" class="button">Add New User</a></button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.age %></td>
                    <td>
                        <a href="/<%= user._id %>/edit" class="button">Edit</a>
                        <form method="POST" action="/<%= user._id %>?_method=DELETE" style="display:inline;">
                            <button type="submit" class="button delete">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</body>
</html>
